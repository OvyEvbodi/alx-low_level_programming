CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all .c.o clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.c.o:
	$(CC) $(CFLAGS) -c $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	clean oclean

re: oclean all
