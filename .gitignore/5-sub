#include "main.h"

/**
 * rev_string - reverses a string, followed by a new line
 * @s: the string to reverse
 *
 * Return: void
 */

void rev_string(char *s)
{
	int len = 0;
	int i;
	char new_s;

	while (s[len] != '\0')
	{
		len++;
	}

	for (i = 0; len >= 0; i++)
	{
		new_s = s[len - 1];
		len--;
		s[i] = new_s;
	}
}
